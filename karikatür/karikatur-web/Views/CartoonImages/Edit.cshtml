@model karikatur_db.Models.CartoonImages

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CartoonImages</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CartoonId" class="control-label"></label>
                <select asp-for="CartoonId" class="form-control" asp-items="ViewBag.CartoonId"></select>
                <span asp-validation-for="CartoonId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageSrc" class="control-label"></label>
                <input asp-for="ImageSrc" id="image_src" class="form-control" />
                <button type="button" id="choose-image" data-input="#image_src" class="btn btn-info">
                    <i class="far fa-image fa-2x"></i>
                </button>
                <span asp-validation-for="ImageSrc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
